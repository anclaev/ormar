{
  "name": "gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/gateway/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "gateway:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "gateway:build:development"
        },
        "production": {
          "buildTarget": "gateway:build:production"
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/gateway/Dockerfile . -t anclaev/ormar-gateway"
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "engine": "docker",
        "metadata": {
          "load": true
        }
      },
      "configurations": {
        "local": {
          "tags": ["anclaev/ormar-gateway:local"],
          "push": false,
          "load": true
        },
        "development": {
          "tags": ["anclaev/ormar-gateway:dev"],
          "push": true,
          "cache-from": ["type=gha"],
          "cache-to": ["type=gha,mode=max"]
        },
        "production": {
          "tags": ["anclaev/ormar-gateway:latest"],
          "push": true,
          "cache-from": ["type=gha"],
          "cache-to": ["type=gha,mode=max"]
        }
      }
    }
  }
}
